%h1 予約確認
= image_tag("icon/home.png", :class=> "icon", :size => "24x24")
= link_to("Go Top Directory", root_path)
%br
%br
#queue_table
  %ol
    - if @queue_list.empty?
      %li.nothing 予約なし
    - else
      - @queue_list.each do |queue|
        %li.queue[queue]= image_tag("icon/music_48x48.png", :size => "36x36", :class=> "icon") + queue.name + link_to("取消", queue_path(queue), :remote => true, :confirm => "本当に予約から削除しますか？", :method => :delete, :class => "queue_remove clearfix")
