%h1= image_tag("icon/search.png", :class => "icon", :size => "32x32") + @query

= form_tag do
  = hidden_field_tag "query", params[:query]
  = hidden_field_tag "field", params[:field]
  = hidden_field_tag "filter", params[:filter]
  %label{:for => "sort"} ソート: 
  = select_tag "sort", options_for_select(PasokaraFile::SORT_OPTIONS, params[:sort])
  = submit_tag "並び替え"

#entity_list
  .autopagerize_page_element
    %ul
      = render :partial => "pasokaras/pasokara_file_list", :locals => {:pasokaras => @search.results}

%br

= paginate @search
%br
= image_tag("icon/home.png", :class => "icon", :size => "24x24")
= link_to("Go Top Directory", root_path)
