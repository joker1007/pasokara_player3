!!! 5
%html
  %head
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "noindex,nofollow", :name => "robots"}/
    = stylesheet_link_tag "application"
    = javascript_include_tag "pasokaras_play"
    = csrf_meta_tag
    - if request.iphone?
      %meta{:content => "width=640, initial-scale=0.5", :name => "viewport"}/
    - elsif request.ipad?
      %meta{:content => "width=640, initial-scale=1.0", :name => "viewport"}/
    %title PasokaraPlayer - Play

    - if @pasokara
      :javascript
        $(document).ready(function() {
          indicator_init();
          check_encode_status("#{@pasokara.id}", "#{@movie_path}", 0, add_video_tag);
        });
    - else
      :javascript
        $(document).ready(function() {
          indicator_init();
          check_next();
        });
    %body
      %div#indicator{:style => "padding-left: 220px;"}
      #video

