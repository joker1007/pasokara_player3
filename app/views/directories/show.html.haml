= link_to("上のディレクトリへ", @dir.directory)
%h1= image_tag("icon/elastic_movie.png", :class => "parent_dir", :size => "36x36") + @dir.name

%ul#entity_list
  .autopagerize_page_element
    - @subdir.each do |dir|
      = entity_li(dir)

    = render :partial => "pasokaras/pasokara_file_list", :locals => {:pasokaras => @pasokaras}

- if @pasokaras.num_pages >= @subdir.num_pages
  = paginate @pasokaras
- else
  = paginate @subdir

