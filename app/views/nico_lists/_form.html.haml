= form_for @nico_list do |f|
  -if @nico_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nico_list.errors.count, "error")} prohibited this nico_list from being saved:"
      %ul
        - @nico_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :download
    = f.check_box :download
  .actions
    = f.submit 'Save'
