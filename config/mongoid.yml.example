development:
  sessions:
    default:
      hosts:
        - localhost
      database: pasokara_player_rails3_development

test:
  sessions:
    default:
      hosts:
        - localhost
      database: pasokara_player_rails3_test

# set these environment variables on your prod server
production:
  sessions:
    default:
      hosts:
        - <%= ENV['MONGOID_HOST'] %>
      username: <%= ENV['MONGOID_USERNAME'] %>
      password: <%= ENV['MONGOID_PASSWORD'] %>
      database: <%= ENV['MONGOID_DATABASE'] %>
